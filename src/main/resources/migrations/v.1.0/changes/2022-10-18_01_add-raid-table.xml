<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
>
    <changeSet context="legacy" author="Homyakin" id="add-raid-table">
        <createTable tableName="raid">
            <column name="event_id" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="raid_pkey"/>
            </column>
            <column name="personage_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="event_id"
                baseTableName="raid"
                constraintName="fk_raid_event"
                referencedColumnNames="id"
                referencedTableName="event"
        />

        <addForeignKeyConstraint
                baseColumnNames="personage_id"
                baseTableName="raid"
                constraintName="fk_raid_personage"
                referencedColumnNames="id"
                referencedTableName="personage"
        />

    </changeSet>
</databaseChangeLog>